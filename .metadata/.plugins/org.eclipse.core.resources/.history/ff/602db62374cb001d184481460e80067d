#include "API_lcd.h"
#include "API_Lcd_port.h"
#include "API_delay.h"

static const uint8_t LCD_INIT_CMD[]={
		_4BIT_MODE,DISPLAY_CONTROL,RETURN_HOME,ENTRY_MODE+AUTOINCREMENT,DISPLAY_CONTROL+DISPLAY_ON,CLR_LCD
};

_Bool LCD_Init(void){

   if(LCD_HW_init()==LCD_ERROR)return LCD_ERROR;
   LCDdelay(DELAY20ms);
   sacar(COMANDO_INI1,CONTROL);
   LCDdelay(DELAY10ms);
   sacar(COMANDO_INI1,CONTROL);
   LCDdelay(DELAY1ms);
   sacar(COMANDO_INI1,CONTROL);
   sacar(COMANDO_INI2,CONTROL);
   for(uint8_t i=0;i<sizeof(LCD_INIT_CMD);i++)ControlLCD(LCD_INIT_CMD[i]);
   LCDdelay(DELAY2ms);
   return LCD_OK;

}

void LCDdelay(uint32_t demora) {
	  HAL_Delay(demora);
}


void ControlLCD(uint8_t valor){
	envia(valor,CONTROL);
}

void DatoLCD (uint8_t dato){
	envia(dato,DATOS);
}

void envia (uint8_t valor,_Bool tipo){
    sacar(valor&HIGH_NIBBLE,tipo); 		//me con quedo y envio los 4 bits mÃ¡s significaticos.
    sacar(valor<<LOW_NIBBLE,tipo);   	//me quedo y envio los 4 bits menos significativos.
}

void sacar (uint8_t valor, _Bool tipo){

	LCD_Write_Byte(valor+tipo+EN+BL);
	LCDdelay(DelayTime);
	LCD_Write_Byte(valor+tipo+BL);
	LCDdelay(DelayTime);
}


void outtext (uint8_t *texto){
	while(*texto)
  	DatoLCD(*texto++);
}

void ClrLcd(void){
   ControlLCD(CLR_LCD);				//	Display Clear.
   LCDdelay(DELAY2ms);

}


void PosCaracH(uint8_t posH){
  ControlLCD(posH | LINEA1);
}

void PosCaracL(uint8_t posL){
  ControlLCD(posL | LINEA2);
}

void CursorOff(void){
  ControlLCD(CURSORON+);
}
