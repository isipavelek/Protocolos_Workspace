#ifndef API_INC_API_LCD_H_
#define API_INC_API_LCD_H_


#define DATOS 1
#define CONTROL 0


#define EN (1<<2)
#define BL (1<<3)
#define CLR_CMD 1
#define DelayTime 10



void LCD_Init(void);
void sacar (uint8_t valor, uint8_t tipo);
void LCDdelay(uint32_t demora);
void ControlLCD(uint8_t valor);
void outtext (uint8_t *texto);
void DatoLCD (uint8_t dato);
void envia (uint8_t valor,uint8_t tipo);
void ClrLcd(void);


#endif /* API_INC_API_LCD_H_ */
